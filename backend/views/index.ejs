<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />	
  </head>
  <body>
    <h1>Cadastro em tempo de execução</h1>
    <a href="/">HomePage</a>

		<fieldset id="formCadastro">
			<legend>Cadastro de pessoas</legend>
			<form action="cadastrar-pessoa" method="POST" onsubmit="return validacao()">
				<div>
					<label for="nome">Nome: </label>
					<input type="text" name="nome" id="nome" /> 
				</div>
				<div>
					<label for="sobrenome">Sobrenome:  </label>
					<input type="text" name="sobrenome" id="sobrenome" /> 
				</div>
				<div>
					<label for="cpf">CPF:  </label>
					<input type="text" name="cpf" id="cpf" /> 
				</div>
				<div>
					<label for="telefone">Telefone:  </label>
					<input type="text" name="telefone" id="telefone" /> 
				</div>
				<div>
					<label for="endereco">Endereço:  </label>
					<input type="text" name="endereco" id="endereco" /> 
				</div>
				<hr>
				<div>
					<input type="submit" value="Cadastrar" /> 
				</div>
			</form>
		</fieldset>
		<input type="button" value="Formulário de cadastro" id="mostrarForm" onclick="mostrarFormulario()" style="display:none" /> 
		<fieldset>
			<legend>Pessoas cadastradas</legend>
			<table border="1" id="registros">
				<tr>
					<th>Nome</th>
					<th>Sobrenome</th>
					<th>CPF</th>
					<th>Telefone</th>
					<th>Endereço</th>
				</tr>
				<% pessoas.forEach(({nome, sobrenome, cpf, telefone, endereco}) => { %>
					<tr>
						<td><%= nome %></td>
						<td><%= sobrenome %></td>
						<td><%= cpf %></td>
						<td><%= telefone %></td>
						<td><%= endereco %></td>
					</tr>
				<% }) %>
			</table>
		</fieldset>
		<script src="/javascripts/jquery.min.js"></script>
		<script src="/javascripts/validacao.js"></script>
  </body>
</html>
